datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Student {
 id               Int    @id @default(autoincrement())
  photo           String?
  firstName       String
  lastName        String
  nationality     String
  studentCode     String
  certificateId   String
  course          String
  results         String
  graduationYear  Int
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  image     String?  // Optional field for storing image URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Course {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  batchNo   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

